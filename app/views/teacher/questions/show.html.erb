<div class="container mt-4">
  <h3 class="mb-4">Question Details</h3>

  <div class="card mb-4">
    <div class="card-body">
      <p class="card-text">
        <strong>Content:</strong> <%= @question.content %><br>
        <strong>Question Type:</strong> <%= @question.question_type.humanize %>
      </p>

      <% if @question.question_type == 'multiple_choice' %>
        <h4 class="mt-4">Options:</h4>
        <ul class="list-group">
          <% @question.options.each_with_index do |(key, value), index| %>
            <li class="list-group-item">
              <strong>Option <%= index + 1 %>:</strong> <%= key %>
            </li>
          <% end %>
        </ul>
      <% end %>
      
      <div class="mt-4">
        <%= link_to 'Edit Question', edit_teacher_exam_question_path(@exam, @question), class: 'btn btn-primary' %>
        <%= link_to 'Back to Exam', teacher_exam_path(@exam), class: 'btn btn-secondary ml-2' %>
        <%= button_to 'Delete', teacher_exam_question_path(@exam, @question), method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger ml-2' if current_user.teacher? %>
      </div>
    </div>
  </div>
</div>
