<div class="container mt-4">
  <h1 class="mb-4">Edit Exam</h1>

  <%= form_with(model: @exam, url: admin_exam_path(@exam), method: :patch, local: true, class: 'card p-4') do |form| %>
    <% if @exam.errors.any? %>
      <div class="alert alert-danger" id="error_explanation">
        <h2><%= pluralize(@exam.errors.count, "error") %> prohibited this exam from being saved:</h2>
        <ul>
          <% @exam.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= form.label :title, class: 'form-label' %>
      <%= form.text_field :title, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :description, class: 'form-label' %>
      <%= form.text_area :description, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :start_time, class: 'form-label' %>
      <%= form.datetime_select :start_time, class: 'form-control' %>
    </div>

    <div class="mb-3">
      <%= form.label :end_time, class: 'form-label' %>
      <%= form.datetime_select :end_time, class: 'form-control' %>
    </div>

    <div class="d-flex justify-content-between">
      <%= form.submit 'Update Exam', class: 'btn btn-primary' %>
      <%= link_to 'Back', admin_exam_path(@exam), class: 'btn btn-secondary' %>
    </div>
  <% end %>
</div>
